{% extends "layout.njk" %}
{% block content %}
  <div class="card table-container">
    <a href="/instructors/create">New</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{ instructor.avatar_url }})"></span>
              {{ instructor.name }}
            </td>
            <td>{{instructor.services}}</td>
            <td>{{instructor.students}}</td>
              {# <td>
            {% for service in instructor.services %}
                <span class="service">{{ service }}</span>
            {% endfor %}
              </td> #}
            <td>
              <a href="/instructors/{{ instructor.id }}">
                <span class="material-icons">
                  visibility
                </span>
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
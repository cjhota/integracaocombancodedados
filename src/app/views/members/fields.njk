<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{ member.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input type="text" name="name" placeholder="Nome do membro" value="{{ member.name }}">
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" placeholder="membro@mebro.com" value="{{ member.email }}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ member.birth }}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" checked="checked" {% if member.gender == "M" %} {% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if member.gender == "F" %} checked="checked" {% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div>Type of Blood</div>
    <div>
        <select name="blood">
            <option value="A1"
                {% if  menber.blood =="A1" %} selected {% endif %}
                >A+</option>
            <option value="A0"
                {% if  menber.blood =="A0" %} selected {% endif %}
                >A-</option>
            <option value="B1"
                {% if  menber.blood =="B1" %} selected {% endif %}
                >B+</option>
            <option value="B0"
                {% if  menber.blood =="B0" %} selected {% endif %}
                >B-</option>
            <option value="AB1"
                {% if  menber.blood =="AB1" %} selected {% endif %}
                >AB+</option>
            <option value="AB0"
                {% if  menber.blood =="AB0" %} selected {% endif %}
                >AB-</option>
            <option value="O1"
                {% if  menber.blood =="O1" %} selected {% endif %}
                >O+</option>
            <option value="O0"
                {% if  menber.blood =="O0" %} selected {% endif %}
                >O-</option>
        </select>
    </div>

</div>

<div class="item">
    <div>Peso (KG)</div>
    <div>
        <input type="number" name="weight" value="{{ member.weight }}">
    </div>
</div>

<div class="item">
    <div>Altura(CM)</div>
    <div>
        <input type="number" name="height" value="{{ member.height }}">
    </div>
</div>

<button type="submit">Salvar</button>